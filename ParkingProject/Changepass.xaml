<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.BackgroundColor="Black"
    x:Class="ParkingProject.Changepass" Title="Change Password">
    
    <StackLayout Padding="10,10,10,0">
        <Label x:Name="message" HorizontalOptions="Center" FontSize="20"/>
        <Frame Padding="20" HasShadow="False"/>
        <Entry x:Name="newpass" IsPassword="True" Placeholder="Enter a new password"/>
        <Entry x:Name="confirmpass" IsPassword="True" Placeholder="Confirm your new password"/>
        <Frame Padding="10" BackgroundColor="White" HasShadow="False"/>
        <Button x:Name="updatepass" BackgroundColor="#7B7B7C" Clicked="changePass" TextColor="White" Text="Change Password" CornerRadius="10"/>
    </StackLayout>
</ContentPage>
